      <li>
        <a href="https://www.linkedin.com/in/tricia-blosser" target="blank">
          <i class="fab fa-linkedin"></i>
        </a>
      </li>
      <li>
        <a href="https://github.com/Triblo" target="blank">
          <i class="fab fa-github"></i>
        </a>
      </li>
    </ul>
  </div>




