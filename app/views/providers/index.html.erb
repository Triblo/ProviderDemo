<div class="banner" style="background-image: url(https://images.unsplash.com/photo-1628771065518-0d82f1938462?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80)">
    <div class="banner-container">
        <h1>Welcome to Triblo's National Provider Identifier Search</h1>
        <p>Enter NPI here to find more information</p>
        <%= simple_form_for@provider do |f| %>
            <%= f.input :npi, as: :string, inline_label: 'Search', label: false %>
            <%= f.submit :class => "btn-medium" %>
        <% end %>
    </div>
</div>
<div class="text-center border-bottom">
    <h3>National Provider Info</h3>
</div>
<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">NPI</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Zip</th>
                <th scope="col">Type</th>
                <th scope="col">Code</th>
                <th scope="col">License</th>
            </tr>
        </thead>
        <tbody>
        <% @providers.each do |provider| %>
            <tr>
                <th scope="row"><%= provider.npi %></th>
                <td><%= provider.name %></td>
                <td><%= provider.address %></td>
                <td><%= provider.city %></td>
                <td><%= provider.state %></td>
                <td><%= provider.zip %></td>
                <td><%= provider.type %></td>
                <td><%= provider.code %></td>
                <td><%= provider.license %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
<div class="footer ">
    <div class="list-inline margin-sm">
    </div>
</div>




